#__json__#
syntax "json" "\.json$"
color brightwhite "\"[^\"]*\"(?=\s*:)"
color white "\"[^\"]*\""
color brightblack "^[ \t]*//.*$"

#__css__#
syntax "css" "\.css$"
color brightblue "\<(color|background|margin|padding|font|display|position|border|width|height)\>"
color brightgreen "[#\.][A-Za-z0-9_-]+"
color brightblack "/\*([^*]|\*+[^*/])*\*+/"

#__javascript__#
syntax "javascript" "\.js$"
color brightblue "\<(var|let|const|function|return|if|else|for|while|class|extends|new|try|catch|async|await)\>"
color gray "//.*$"
color gray "/\*([^*]|\*+[^*/])*\*+/"

#__java__#
syntax "java" "\.java$"
color lightblue "\<(class|public|private|protected|static|void|new|return|if|else|for|while|try|catch)\>"
